<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spacescout.spacescout_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <permission
        android:name="com.spacescout.spacescout_android.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.spacesout.spacescout_android.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/CustomAppTheme" >

        <activity
            android:name="com.spacescout.spacescout_android.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.spacescout.spacescout_android.FilterSpacesActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:parentActivityName="com.spacescout.spacescout_android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spacescout.spacescout_android.FilterSpacesActivity" />
        </activity>

        <activity
            android:name="com.spacescout.spacescout_android.FavSpacesActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:parentActivityName="com.spacescout.spacescout_android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spacescout.spacescout_android.FavSpacesActivity" />
        </activity>

        <activity
            android:name="com.spacescout.spacescout_android.SpaceDetailsActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:parentActivityName="com.spacescout.spacescout_android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.spacescout.spacescout_android.SpaceDetailsActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/googleMapsKey" />

    </application>

</manifest>
